<body id="page">
<h1 id="main_title">Upcoming Motorsport Events</h1>

<div class="filter_buttons">
  <h3>Filters</h3>
  <button id="all_filter_button">all</button>
  {% for sport_type in sport_types %}
  {% set class = sport_type | lower | replace(from=" ", to="_") %}
  <button class="filter_button {{ class }}_filter_button">{{ sport_type | lower }}</button>
  <!-- <button class="filter_button">{{ sport_type | lower }}</button> -->
  {% endfor %}
</div>

<div class="content">
  <ul class="event_list">
  {% for event in events %}
  {% set class = event.sport | lower | replace(from=" ", to="_") %}
  <li class="event_list_item {{ event.sport | lower | replace(from=" ", to="_") }}_event_list_item">
    <span class="event_sport event_list_field {{ class }}_event_list_field">{{ event.sport }}</span>
    <span class="event_name event_list_field {{ class }}_event_list_field">Gran Prime de Italia</span>
    <span class="event_location event_list_field {{ class }}_event_list_field"><b>{{ event.country }},</b> {{ event.location }}</span>
    <span class="event_dates event_list_field {{ class }}_event_list_field">{{ event | event_date_range }}</span>
    <span class="event_countdown event_list_field {{ class }}_event_list_field">8 months</span>
  </li>
  {% endfor %}
  </ul>
</div>

